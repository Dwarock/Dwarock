name: scan-code
on:
  push:
    branches:
      - dev2
jobs:
  pmd-runapex:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
      with:
        fetch-depth: 0
    - name: Setup PMD
      uses: legetz/setup-pmd@7.1.0
    - name: APEX full scan for design rules only
      run: pmd check --dir ./force-app/main/default/classes -R category/apex/design.xml -f text
